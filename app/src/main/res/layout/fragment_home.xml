<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeFragment">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:background="#4CAF50"
    >
    <ImageView
        android:id="@+id/profile_id"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/hostel_icon"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hostel Management"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:textStyle="italic"
        android:layout_toRightOf="@id/profile_id"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"/>
</RelativeLayout>

    <RelativeLayout
        android:id="@+id/addStaff_layout_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:background="#F8F3F3"
        android:layout_marginHorizontal="12dp"
        >

        <ImageView
            android:id="@+id/staff_icon_ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:src="@drawable/ic_baseline_people_alt_24"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/staff_icon_ID"
            android:padding="20dp"
            android:text="Add Staff"
            android:textColor="#8DA9C4"
            android:textSize="18sp"
            android:textStyle="italic" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:padding="20dp"
            android:src="@drawable/ic_baseline_arrow_forward_24"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/addStudent_Layout_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:background="#F8F3F3"
        android:layout_marginHorizontal="12dp"
        >

        <ImageView
            android:id="@+id/student_icon_ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:src="@drawable/ic_baseline_boy_24" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/student_icon_ID"
            android:padding="20dp"
            android:text="Add Students"
            android:textColor="#8DA9C4"
            android:textSize="18sp"
            android:textStyle="italic" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:padding="20dp"
            android:src="@drawable/ic_baseline_arrow_forward_24"/>

    </RelativeLayout>

</LinearLayout>